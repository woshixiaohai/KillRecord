<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/base_query_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        >
        
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:orientation="horizontal"

        android:gravity="center"
        >

        <TextView
            android:id="@+id/base_tv_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/query_bt_bg"
            android:paddingBottom="20px"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:paddingTop="20px"
            android:text="查询"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_small"
            />

        <TextView
            android:id="@+id/base_tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reset_bt_bg"
            android:paddingBottom="20px"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:paddingTop="20px"
            android:text="重置"
            android:textColor="@color/text_black_normal"
            android:textSize="@dimen/text_size_small"
            android:layout_marginLeft="50px"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ling_bg"
        ></View>

</LinearLayout>