<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <com.qhsoft.killrecord.view.FreeToolbar
        android:id="@+id/mFreeToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.qhsoft.killrecord.view.FreeToolbar>
    <LinearLayout
        android:id="@+id/ll_tool"
        android:layout_width="710px"
        android:layout_height="80px"
        android:background="@drawable/ll_save_bg"
        android:layout_marginTop="20px"
        >
        <LinearLayout
            android:id="@+id/ll_refresh"
            android:layout_width="236px"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content" android:contentDescription="TODO" 
                android:layout_height="wrap_content"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷新"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20px"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="236px"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content" android:contentDescription="TODO" 
                android:layout_height="wrap_content"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20px"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_query"
            android:layout_width="236px"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content" android:contentDescription="TODO" 
                android:layout_height="wrap_content"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20px"
                />

        </LinearLayout>





    </LinearLayout>



    <com.qhsoft.killrecord.view.myrecyclerview.MyRecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20px"
        >

    </com.qhsoft.killrecord.view.myrecyclerview.MyRecyclerView>
</LinearLayout>
